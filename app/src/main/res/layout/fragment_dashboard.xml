<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_homejudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:text="Kategori Tanaman" />

    <Button
        android:id="@+id/btn_akar"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:text="Akar"
        app:layout_constraintTop_toBottomOf="@id/list_homejudul"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/btn_batang"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:text="Batang"
        app:layout_constraintTop_toBottomOf="@id/btn_akar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/btn_daun"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:text="Daun"
        app:layout_constraintTop_toBottomOf="@id/btn_batang"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/btn_bunga"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:text="Bunga"
        app:layout_constraintTop_toBottomOf="@id/btn_daun"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/btn_buah"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:text="Buah"
        app:layout_constraintTop_toBottomOf="@id/btn_bunga"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        />

</androidx.constraintlayout.widget.ConstraintLayout>