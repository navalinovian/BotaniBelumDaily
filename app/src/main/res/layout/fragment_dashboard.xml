<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_akar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btn_batang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batang"
        app:layout_constraintTop_toBottomOf="@id/btn_akar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btn_daun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daun"
        app:layout_constraintTop_toBottomOf="@id/btn_batang"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btn_bunga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bunga"
        app:layout_constraintTop_toBottomOf="@id/btn_daun"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btn_buah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buah"
        app:layout_constraintTop_toBottomOf="@id/btn_bunga"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>